pipeline {
    agent {
        node {
            label "linux && java11"
        }
    }
    stages {
        stage('Hello') {
            steps {
                echo('Hello Pipeline')
            }
        }
    }

    post {
        always {
            echo "i will always say hello again!"
        }
        success {
            echo "yay, success"
        }
        failure {
            echo "oh n, failure"
        }
        cleanup {
            echo "i will clean"
        }
    }

}